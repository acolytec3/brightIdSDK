{
  "name": "typescript-node-lib",
  "version": "0.0.0",
  "licence": "MIT",
  "author": {
    "name": "name",
    "email": "email@domain.com"
  },
  "main": "dist/index.js",
  "description": "your typescript library description",
  "keywords": [
    "typescript"
  ],
  "scripts": {
    "changelog": "standard-changelog",
    "docs": "typedoc --options typedoc.markdown.json",
    "lint": "eslint -c ./.eslintrc.json src/**/*.ts --fix",
    "prepublishOnly": "tsc -p .",
    "size-limit": "tsc -p . && size-limit",
    "test": "jest",
    "upgrade-interactive": "npm-check --update"
  },
  "homepage": "https://github.com/yourname/yourrepo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourname/yourrepo.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "limit": "1 s",
      "webpack": false,
      "path": "dist/*.js"
    }
  ],
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "codecov": "^3.5.0",
    "eslint": "^6.1.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "npm-check": "^5.9.0",
    "prettier": "^1.18.2",
    "size-limit": "^1.3.8",
    "standard-changelog": "^2.0.13",
    "ts-jest": "^24.0.2",
    "typedoc": "^0.15.0",
    "typedoc-plugin-markdown": "^2.1.1",
    "typescript": "^3.5.3"
  }
}
